	RewriteRule ^blog/search/([^/]*)/$ index.php/?app=blogindex&search=$1

	# website.com/entries/6810181/een-jaar-naar-zweden
	RewriteRule ^entries/([0-9]+)/([^/]*)$ index.php/?app=blogentry&id=$1
	RewriteRule ^entries/([0-9]+)/([^/]*)/$ index.php/?app=blogentry&id=$1

